<div class='homepage'>

  
<div class="container">
  <h2>Featured Pieces</h2>  
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
      <div class="item active">
        <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/0/0b/Sandro_Botticelli_-_La_nascita_di_Venere_-_Google_Art_Project_-_edited.jpg/1920px-Sandro_Botticelli_-_La_nascita_di_Venere_-_Google_Art_Project_-_edited.jpg" alt="The Birth of Venus" style="width:100%;">
        <div class="carousel-caption">
          <h3>Birth of Venus</h3>
          <p>$100,000,000</p>
        </div>
      </div>

      <div class="item">
        <img src="https://images2.minutemediacdn.com/image/upload/c_fill,g_auto,h_1248,w_2220/f_auto,q_auto,w_1100/v1555438162/shape/mentalfloss/7948679387.png" alt="Frida Portrait" style="width:100%;">
        <div class="carousel-caption">
          <h3>Frida Original</h3>
          <p>$100,000,000</p>
        </div>
      </div>
    
      <div class="item">
        <img src="//www.creativelive.com/blog/wp-content/uploads/2018/08/AdobeStock_89641238-620x413.jpeg" alt="sky" style="width:100%;">
        <div class="carousel-caption">
          <h3>This very famous sky painting</h3>
          <p>$100,000,000</p>
        </div>
      </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>









  <section>
    <ul class="list-group">
      <%@products.each do |product|%>
        <li class="list-group-item">
          <%=product.name%>
          <%=product.price%>
          <% if product.image == nil  %>
            <p> <%= image_tag  "art.jpg" , alt:"pic"%></p>
          <% else %>
            <p> <%= image_tag  product.image,class:"img-fluid img_max", alt:"pic"%></p>
          <% end  %>
        </li>
      <%end%>
    </ul>
  </section>
</div>