<div class='homepage'>

  <section>
    <ul class="list-group">
      <%@products.each do |product|%>
        <li class="list-group-item">
          <%=product.name%>
          <%=product.price%>
          <% if product.image == nil  %>
            <p> <%= image_tag  "art.jpg" , alt:"pic"%></p>
          <% else %>
            <p> <%= image_tag  product.image,class:"img-fluid img_max", alt:"pic"%></p>
          <% end  %>
        </li>
      <%end%>
    </ul>
  </section>
</div>