<div class="home">
  <div class="home_background" style="background: url(https://i.imgur.com/HCWU4MU.jpg); background-size: 100%;"></div>
  <div class="home_content">
    <div class="home_title">
      A World of Magic
    </div>
  </div>
</div>

<%= render partial: "shared/flash" %>

<!-- 1st block with categories -->
<div class="intro">
		<div class="container">
			<div class="row">
				<div class="col">
					<h2 class="intro_title text-center">We offer the best magical products</h2>
				</div>
			</div>
			<div class="row">
				<div class="col-lg-10 offset-lg-1">
					<div class="intro_text text-center">
						<p>Whether you’re on the hunt for a wizardly wand, in dire need of a protective spell, or seeking the companionship of a plant who will actually talk back, you’re bound to find something that will sate your magical curiosities. </p>
					</div>
				</div>
			</div>
			<div class="row intro_items">

				<!-- Intro Item -->
      <% (1..3).each do |i| %>
				<div class="col-lg-4 intro_col">
					<div class="intro_item">
						<div class="intro_item_overlay"></div>
            <% if i == 1 %>
              <div class="intro_item_background" style="background-image:url(https://i.imgur.com/vHrp5Wl.jpg)"></div>
            <% elsif i == 2 %>
              <div class="intro_item_background" style="background-image:url(https://i.imgur.com/rAwT2VX.jpg)"></div>
            <% elsif i == 3 %>
              <div class="intro_item_background" style="background-image:url(https://i.imgur.com/hIIfn2k.jpg)"></div>
            <% end %>
						<div class="intro_item_content d-flex flex-column align-items-center justify-content-center">
							<div class="intro_date">For a true wizard</div>
							<div class="button intro_button"><div class="button_bcg"></div><%= link_to "see more", category_products_path(i)%></div>
							<div class="intro_center text-center">
                <% if i == 1 %>
                  <h1>Wands</h1>
                <% elsif i == 2 %>
                  <h1>Plants</h1>
                <% elsif i == 3 %>
                  <h1>Books</h1>
                <% end %>
								<div class="intro_price">From $5</div>
							</div>
						</div>
					</div>
				</div>
      <% end %>
				<!-- Intro Item -->

			</div>
		</div>
	</div>
</div>
<!-- 1st block with categories -->

<!-- 2nd block with text -->
<div class="add">
  <div class="cta" style="background-image:url(https://i.imgur.com/ynP6xUf.png)">
      <div class="container">
          <div class="col">
            <div class="owl-item cta_item text-center">
                  <div class="cta_title">About Spellbound</div>
                    <p class="cta_text">SPELLBOUND is a full-stack web project developed by Antonia Irizarry, Kate Pchelina, Olga Patrakova, and Lee Higgins for <%= link_to "Ada Developers Academy", "https://adadevelopersacademy.org/" %>. This project uses Ruby on Rails, HTML, and CSS, with styling modeled on the <%= link_to "Travelix Bootstrap theme", "https://themewagon.com/themes/free-bootstrap-4-html5-travel-agency-website-template-travelix/" %>.</p>
                  </div>
              </div>						
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- 2nd block with text -->

<!-- 3rd block with featured products -->
<div class="offers">
		<div class="container">
			<div class="row"></div>
      <div class="col text-center">
					<h2 class="section_title capitalize">Some of our trending products</h2>
			</div>
			<div class="row offers_items">
      <% Product.all[0..3].each do |product| %>
				<!-- Offers Item -->
				<% if product.active %>
          <div class="col-lg-6 offers_col">
            <div class="offers_item">
              <div class="row">
                <div class="col-lg-6">
                  <div class="offers_image_container">
                    <div class="offers_image_background"><%= link_to image_tag(product.photo_url, size: "250x250", :alt => "product photo"), product_path(product) %></div>
                    <div class="item_name"><%= link_to product.title, product_path(product) %></div>
                  </div>
                </div>
                <div class="col-lg-6">
                  <div class="offers_content">
                    <div class="offers_price"><%= number_to_currency(product.price)%><span> per item</span></div>
                    <p class="offers_text"><%= h truncate(product.description, :length => 100) %>.</p>
                    <div class="offers_link"><%= link_to "view details", product_path(product.id) %></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% end %>
				<% end %>

			</div>
		</div>
	</div>
  <!-- 3rd block with featured products -->