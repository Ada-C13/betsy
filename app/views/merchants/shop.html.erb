<% if @merchant.products.length > 0 %> 
  <table style="width:70%">  
  <h3><%= "#{@merchant.name}\'s Products"%></h3> 
    <tr>
        <th>Name</th>
        <th>Stock</th>
        <th>Price</th>
        <th>Active</th>
        <th></th>
    </tr>    
    <% @merchant.products.each do |product| %>
      <tr>
        <td><%= link_to product.name, product_path(product.id) %></td>
        <td><%= product.stock%></td>
        <td><%= product.price %></td>
        <td>
          <% if product.active %> 
            <%= link_to "Active", product_active_path(product.id), method: :patch %>
          <% else %>
            <%= link_to "Retired", product_active_path(product.id), method: :patch%> 
          <% end %>
        </td>
        <td><%= link_to "Edit", edit_product_path(product)%></td>
      </tr>
    <% end %>
  </table>
  <% else %>
  <h2><%= "#{@merchant.name} does not have any products in the system." %></h2>
<% end %>
