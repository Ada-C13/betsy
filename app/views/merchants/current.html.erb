<main>
  <h2>User Summary: <%= @merchant.username %></h2>
  <p>Joined site: <%= @merchant.created_at.strftime("%b %d, %Y") %></p>
  <p><%= link_to "Add New Product",new_product_path, class: "btn btn-primary" %></p>
  <h2>Dashboard </h2>
  <section class="merchant-products__container">

    <h3 class="merchant-products__header">Products</h3>
    <table class="table">
      <thead class="thead-table">
        <tr>
          <th>Name</th>
          <th>Price</th>
          <th>Inventory</th>
          <th>Category</th>
          <th>Created at</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
      <% Product.where(merchant_id: @merchant.id).each do |product| %>
        <tr>
          <td><%= link_to product.name %></td>
          <td><%= product.price %></td>
          <td><%= product.inventory %></td>
          <td>
            <% product.categories.each do |category| %>
              <%= category.name %>
            <% end %>
          </td>
          <td><%= product.created_at.strftime("%b %d, %Y") %></td>
          <td><%= link_to "Edit",edit_product_path(product.id), class: "btn btn-primary" %></td>
          <td><%= link_to "Delete", product_path(product.id) ,method: :delete, data: { confirm: "Are you sure you want to delete this product?"} ,class:"btn btn-danger"%>
        <tr></td>
          
      <% end %>
      </tbody>
    </table>
</section>

</main>