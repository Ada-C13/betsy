
<main>
  <h2><%= @merchant.username %>' Dashboard</h2>

  <section class="merchant-products__container">
    <h3>Products</h3>

    <table class="table">
      <thead>
        <tr>
          <th>Product Name</th>
          <th>Price</th>
          <th>Active</th>
        </tr>
      </thead>

      <tbody>

      <% products = @merchant.products %>

      <% products.each do |product| %>
        <tr>
          <td><%= product.title %></td>
          <td><%= product.price %></td>
          <td><%= product.active %></td>
        </tr>
      <% end %>

      </tbody>
    </table>

  </section>
</main>