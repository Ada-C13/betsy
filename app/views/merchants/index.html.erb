


<% if session[:merchant_id] %>
  <%= link_to "Log out", logout_path, method: "delete" %>
<% else %>
  <%= link_to "Login with Github", github_login_path %>
<% end %>

<h2 id="top">List of Merchants</h2>

<section data-spy='scroll' style="padding-bottom: 20px;" class="sticky-top">
  <span style="float: right;"><%= link_to "Jump to top", href="#top", class: "btn btn-custom"%></span>
</section>

<table class="table">
  <thead>
    <tr>
      <th>Username</th>
      <th>Joined</th>
    </tr>
  </thead>
  <tbody>
    <% @merchants.each do |merchant| %>
      <tr>
        <td><%= link_to merchant.username, merchant_path(merchant) %></td>
        <td><%= merchant.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Back to All products List", class: "btn btn-secondary" %>