<div class="home">
  <div class="home_background" style="background: url(https://i.imgur.com/HCWU4MU.jpg); background-size: 100%;"></div>
  <div class="home_content">
    <div class="home_title col text-center">
      Magical Merchants
    </div>
  </div>
</div>

<div class="offers">
		<div class="container">
			<div class="row">
				<div class="col text-center">
				</div>
			</div>
			<div class="row offers_items">
				
				<!-- Merchants -->
				<% @merchants.each do |merchant| %>
				<div class="col-lg-6 offers_col">
					<div class="offers_item">
						<div class="row">
							<div class="col-lg-6">
								<div class="offers_image_container">
									<div class="offers_image_background" style="background-image:url(https://i.imgur.com/Ggi0aWT.jpg)"></div>
									<div class="offer_name"><%= link_to merchant.username, merchant_products_path(merchant.id) %></div>
								</div>
							</div>
							<div class="col-lg-6">
								<div class="offers_content">
									<div class="offers_price"><%= merchant.products.count %><span> products available</span></div>
									<p class="offers_text">Suspendisse potenti. In faucibus massa. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam eu convallis tortor.</p>
									<div class="offers_link"><%= link_to "visit shop", merchant_products_path(merchant.id) %></div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<% end %>

			</div>
		</div>
	</div>