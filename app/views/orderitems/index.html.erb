<% if session[:cart].nil? %>
  <h2 class="popular_products">Your cart is empty</h2>
<% else %>
  <%= render "cart" %>


  <div class="cart_total">
    <% total = 0 %>
    <% session[:cart].each do |product| %>
      <% total += (Product.find_by(id: product['product_id']).price * product['quantity']) %>
    <% end %>
    <p class="total"><%= total %> Bells</p>
      <%= button_to 'Checkout', orders_path, class: 'btn btn-primary checkout-btn', method: :get %>
  </div>
<% end %>