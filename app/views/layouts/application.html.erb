<!DOCTYPE html>
<html>
  <head>
    <title>Betsy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="body">
  <header class="app-header__header">
    <h1>
      <%= link_to "Nooksy", root_path %>
    </h1>

    <nav class="header-nav">
      <ul class="nav app-header__site-nav-container">
        <li class="navbar-light navbar-nav nav-link">
          <%= link_to "View all products", users_path, class: "nav-link" %>
        </li>
        <li class="nav-item app-header__nav_item">
          <%= link_to "Add a new product", users_path, class: "nav-link" %>
        </li>
        <li class="nav-item app-header__nav_item">
          <%= link_to "View all merchants", users_path, class: "nav-link" %>
        </li>
      </ul>
      <ul class="nav app-header__user-nav-container">
        <li class="nav-item app-header__nav_item">
          <% if session[:user_id] %>
            <%= link_to "Log out #{User.find_by(id: session[:user_id]).name}", logout_path, method: "delete", :class => "nav-link"  %>
          <% else %>
            <%= link_to "Login with Github", github_login_path, :class => "nav-link"  %>
          <% end %>
        </li>
      </ul>
    </nav>
  </header>

  <% if flash[:result_text] or flash[:messages] %>
    <section class="alert__container">
      <div class="alert alert-<%= flash[:status].to_s == 'failure' ? 'warning' : flash[:status] %>">
        <span><%= flash[:status].to_s == "failure" ? "A problem occurred: " : "" %><%= flash[:result_text] %></span>
        <% if flash[:messages] %>
          <ul>
            <% flash[:messages].each do |name, problems| %>
              <% problems.each do |problem| %>
                <li><%= name %>: <%= problem %></li>
              <% end %>
            <% end %>
          </ul>
        <% end %>
      </div>
    </section>
  <% end %>

  <main>
    <%= yield %>
  </main>
  </body>
</html>
