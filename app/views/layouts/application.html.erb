<!DOCTYPE html>
<html>
  <head>
    <title>Cartmageddon</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <%= link_to 'CARTMAGEDDON', root_path, class: "navbar-brand" %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <%= link_to 'Products', products_path, class: "nav-link" %>
          </li>
          <li class="nav-item active">
            <%= link_to 'Merchants', merchants_path, class: "nav-link" %>
          </li>

          <% if @login_merchant %>
            <li class="nav-item active">
              <%= link_to "Dashboard", merchant_path(@login_merchant), class: "nav-link" %>
            </li>
            <li class="nav-item active">
              <%= link_to "Log Out", logout_path, method: :post, class: "nav-link" %>
            </li>
          <% else %>
            <li class="nav-item active">
              <%= link_to "Cart", order_cart_path, class: "nav-link" %>
            </li>
            <li class="nav-item active">
              <%= link_to "Log In", github_login_path, class: "nav-link" %>
            </li>
          <% end %>
        </ul>

        <form class="form-inline my-2 my-lg-0">
          <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
      </div>
    </nav>

    <% if !flash.empty? %>
      <section class="alert__container">
        <% flash.each do |name, message| %>
          <div class="alert alert-<%= name %>">
          <span>  <%= message %> </span>
          </div>
        <% end %>
      </section>
    <% end %>

    <%= yield %>

  </body>
</html>
