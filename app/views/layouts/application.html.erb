<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Agasalho - bEtsy" %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="turbolinks-cache-control" content="no-preview">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body class="<%=controller_name%> <%=action_name%>">
    <header>  
      <%= render 'layouts/header' %>
      <% if content_for?(:headline) %>
      <h2 class="headline"><%= yield(:headline) %></h2>
    <% end %>
    </header>
    

    <%= render 'layouts/alert' if !flash.empty? %>
  

    <main>
    <%= yield %>
    </main>

    <% if action_name == "landing"%>
    <footer class="footer">
      <div class="container">
        <%= link_to raw("Meet the team &#10084;"), team_path %>
      </div>
    </footer>
    <% end %>
  </body>
</html>

