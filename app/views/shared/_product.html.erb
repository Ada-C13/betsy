<div class='col-md'>
  <% if !product.nil? %>
  <div class='product-grid__product'>
    <%= link_to product_url(product.id) do %>
      <% if product.photo == "" %>
        <%= image_tag("no_photo.png", class: "img-fluid") %>
      <% else %>
        <%= image_tag(product.photo, class: "img-fluid") %>
      <% end %>
      <h5><%= product.name %></h5>
      <div><%= number_to_currency(product.price) %></div> 
    <% end %>
  </div>
  <% end %>
</div>