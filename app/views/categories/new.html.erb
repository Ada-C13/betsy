<div class="home">
  <div class="home_background" style="background: url(https://i.imgur.com/b6IS9xc.jpg); background-size: 100%;"></div>
  <div class="home_content">
    <div class="home_title">
      New Category
    </div>
  </div>
</div>

<div class="blog">
  <div class="container">
      <div class="sidebar_search">
        <%= form_with model: @category do |f| %>

          <div class="form-group">
            <%= f.label "Title for a new category:", class: "sidebar_title" %>
            <%= f.text_field :title, class: "sidebar_search_input" %>
          </div>
          
          <%= f.submit "Add Category", class: "button search_button"%>

        <% end %>
      </div>
  </div>
</div>
