<h3>Product | <%= @category.name %></h3>
<% if Category.product_by_category(@category.name).length > 0%>
  <% Category.product_by_category(@category.name).each do |product|%>
    <%if product.active%>
      <div>
        <img class = "show_images", src="<%= product.photo %>", alt="<%=product.name %>">
        <%= link_to product.name.titleize, product_path(product) %>
        <%= format_price(product.price) %>
        </div>
    <% end %>
  <% end%>
<%else%>
  <p>There is no product for this category</p>
<% end%>