<section class="content">
  <h1 class="cart__text">ORDER FULFILLMENT PAGE</h1>
  <h1 class="cart__text"> TOTAL REVENUE: $<%= number_with_precision(456789, :precision => 2, :delimiter => ',') %></h1>
  <hr>

  <h2 class="cart__text">All orders</h1>
  <table class="table" cellspacing="0" width="100%">
    <thead>
      <tr>
        <%# TODO: add column names %>
      </tr>
    </thead>
  <tbody>

<%# On the order fulfillment page:

    Total Revenue - √
    Total Revenue by status
    Total number of orders by status 
    Filter orders displayed by status
    Link to each individual order - √
    A list of orders including at least one of my products:
        DateTime the order was placed - √
        Each order item sold by me with a quantity and  - √
        line-item subtotal - √
        A link to the item description page - √
        Link to transition the order item to marked as shipped - √
        The current status of the order ("pending", "paid", "complete", "cancelled") - √ %>

  
  <% @order_collection.each do |order| %>
  <tr>

    <td class="text-just-center">
      <h3 class="cart__text"><span class='text-bold cart__text'> Order ID: <%= order.id %> </span></h2>
      <p class="cart__text"><span class='text-bold cart__text'> Created: <%= order.created_at.strftime("%m/%d/%Y at %I:%M%p")  %> <br> Status: <%= order.status %> </span></p>
    </td>

    <tr>
    <td>
      <table cellspacing="0" width="100%">
      <%# Orderitems Table Header %>
      <thead>
        <tr>
          <th scope="col", class="th-sm cart__text">product name</th>
          <th scope="col", class="th-sm cart__text">subtotal</th>
          <th scope="col", class="th-sm cart__text">quantity</th>
          <th scope="col", class="th-sm cart__text">Ship product</th>
        </tr>
      </thead>

      <%# Orderitems Table Content %>
      <% order.orderitems.each do |orderitem| %>
        <tr>
          <td class="text-just-center cart">
            <h6 class="cart__text"><%= link_to orderitem.product.product_name, product_path(orderitem.product.id), class: "text-dark, cart__text" %></h6>
          </td>
          <td class="text-just-center">
            <h6 class="cart__text">$<%= number_with_precision(orderitem.subtotal, :precision => 2, :delimiter => ',') %></h6>
          </td>
          <td width=10% class="mr-4 pr-4">
            <h6 class = "cart__text">
              <%= orderitem.quantity %>
            </h6>
          </td>
          <td class="text-just-center">
            <%= link_to "TODO FUNCTIONING MARK SHIPPED", root_path, class: "catalog__add-to-cart-button"  %>
          </td>
        <tr>
      <% end %>
       </table>
    </td>
  </tr>
  </tr>
  <% end %>

  </tbody>
  </table>

</section>