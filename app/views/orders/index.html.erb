<h2>List of Works</h2>

<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>Status</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.id, order_path(order) %></td>
        <td><%= order.status %></td>
        <td><%= order.customer_email %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Main Menu", root_path %>
