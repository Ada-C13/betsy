<section>
	<%= form_with model: @current_order do |f| %>
		<div class="form-group">
			<%= f.label :email_address %>
			<%= f.text_field :email_address, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :mailing_address %>
			<%= f.text_field :mailing_address, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :name_on_credit_card %>
			<%= f.text_field :name_on_credit_card, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :credit_card_number %>
			<%= f.text_field :credit_card_number, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :credit_card_expiration %>
			<%= f.text_field :credit_card_expiration, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :credit_card_CVV %>
			<%= f.text_field :credit_card_CVV, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :billing_zip_code %>
			<%= f.text_field :billing_zip_code, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.submit "Review Order", class: "btn btn-primary" %>
		</div>
	<% end %>
</section>
