<main>
  <h1>Your Cart</h1>

  <% if @session[:cart] != {} %>
    <%@session[:cart].each do |product| %>
      <% @product = Product.find_by(id: product[0]) %>
      <p><b><%= @product.name %></b></p>
      <p>Price: <%= "$#{'%.2f' % @product.price}" %></b></p>
      <p><b>Quantity: <%= product[1]%></b></p>
      <br>
    <% end %>
  <% end %>
</main>