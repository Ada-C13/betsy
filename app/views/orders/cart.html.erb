<h2>Shopping Cart</h2>
<% if @cart_items %>
	<% @cart_items.each do |item| %>
		<section class="cart-item">
			<%= image_tag(item.photo_url, alt: "photo of the cart item") %>
			<section class="cart-item-info">
				<h3><%= item.name %></h3>
				<ul>
					<li>Cost: <%= number_to_currency(item.price) %></li>
					<li>Quantity: <%= item.quantity %>  |  INSERT LINK TO DELETE</li>
				</ul>
			</section>
		</section>
	<% end %>
<% else %>
	<p>
		Cart is empty.
	</p>
<% end %>