<h2>Shopping Cart</h2>
<section class="cart-page">
	<section class="cart-items-display">
		<% if @cart_items %>
			<% @cart_items.each do |item| %>
				<section class="cart-item">
					<%= image_tag(item.photo_url, alt: "photo of the cart item") %>
					<section class="cart-item-info">
						<h3><%= item.name %></h3>
						<ul>
							<li>Cost: <%= number_to_currency(item.price) %></li>
							<li>Quantity: <%= item.quantity %> (Change?) |  INSERT LINK TO DELETE</li>
						</ul>
					</section>
				</section>
			<% end %>
		<% else %>
			<p>
				Cart is empty.
			</p>
		<% end %>
	</section>
	<section class="checkout-info">
		<%= button_to "Checkout", root_path, :method => "get" %>
	</section>
</section>