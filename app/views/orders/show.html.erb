<div class="container mt-5">
  <h1>Your cart</h1>
  <% if !@order %>
    <div>Your cart is empty. Add something already!</div>
  <% else %>

    <% @order.order_items.each do |order_item| %>
      <div class="card bg-light" style="width: 30rem;">
        <div class="row card-body">
          <div class="col-5">
            <img src= <%= order_item.product.image %> alt="" class="img-fluid">
          </div>
          <div class="col">
            <h1 class="card-title"> <%= order_item.product.name %> </h5>
            <h6 class="card-subtitle mb-2 text-muted">On bEtsy since: <%= order_item.product.price %></h6>
            <ul>
              <li>Products: <%=  %></li>
              <li>Orders: N/A</li>
              <li>Rating: N/A</li>
            </ul>
          </div>
        </div>
      </div>
    <% end %>

  <% end %>


</div>