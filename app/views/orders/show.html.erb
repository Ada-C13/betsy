<h2>Order History</h2>

<table style="text-align: center;">
  <tr>
      <th>Guest Name</th>
      <th>Email</th>
      <th>Address</th>
      <th>City</th>
      <th>Zip Code</th>
      <th>Card Number</th>
      <th>Card Exp. Date</th>
  </tr>
    <tr>
        <td><%= @order[:guest_name] %></td>
        <td><%= @order[:email] %></td>
        <td><%= @order[:address] %></td>
        <td><%= @order[:city] %></td>
        <td><%= @order[:zip_code] %></td>
        <td><%= @order[:card_number] %></td>
        <td><%= @order[:card_expiration_date] %></td>

  </tr>
</table>
<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Product</th>
    </tr>
  </thead>
  <tbody>
    <% @merchant_items.each do |merchant_item|  %>
      <tr>
        <td><%= merchant_item.id %></td>
        <td><%= merchant_item.name %></td>
        <td><%= merchant_item.price %></td>
        <td><%= merchant_item.quantity %></td>
        <td><%= merchant_item.product.name %></td>
      </tr>
    <% end %>
    </tbody>
  </table>


