<main>
  <h1>All Products</h1>
  <% @products.each do |product| %>
    <section class="product-cards">
      <div class="card">
        <%= image_tag "#{product.img_url}" %>
        <div>
          <h4><b><%= link_to product.name, product_path(product.id) %></b></h4>
          <p><%= number_to_currency(product.price) %></p>
        </div>
      </div>
    </section>
  <%end%>
</main>