<p id="notice"><%= notice %></p>

<h1>Products</h1>

<div class="product_grid container">
  <% @products.in_groups_of(4).each do |group| %>
  <div class="row">
    <% group.each do |product| %>
      <%= render partial: "product", locals: { product: product } %>
    <% end %>

  </div>


  <% end %>


</div>


<br>

<%= link_to 'New Product', new_product_path %>
