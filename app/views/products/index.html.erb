<h3> Products/All </h3>

<div>
<% @products.each do |product| %>
  <%if product.active%>
    <div>
    <img class = "show_images", src="<%= product.photo %>", alt="<%=product.name %>">
    <%= link_to product.name, product_path(product) %>
    <%= format_price(product.price) %>
    </div>
  <%end%>
<% end %>
<br>
<div>

<p><%= page_entries_info @product %></p> 

<div class="pagination">
  <%= will_paginate @products %>
</div> 


