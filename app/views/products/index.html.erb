
<body data-gr-c-s-loaded="true" style="">

  <div class="parallax-mirror" style="visibility: visible; z-index: -100; position: fixed; top: 0px; left: 0px; overflow: hidden; transform: translate3d(0px, -139px, 0px); height: 465px; width: 1280px;"><img class="parallax-slider" src="images/blog_background.jpg" style="transform: translate3d(-200px, 111.2px, 0px); position: absolute; height: 415px; width: 1681px; max-width: none;"></div>
    <div class="super_container">
      <div class="home">
        <div class="home_background parallax-window" data-parallax="scroll">
          <div><img src="https://i.imgur.com/HCWU4MU.jpg" alt="background" /></div>
        </div>
          
        <div class="home_content">
          <div class="home_title">Products</div>
        </div>
      </div>
    </div>
  </div>


  <% if @merchant %>
    <h2 class="category-names">Products by <%= @merchant.username %></h2>
  <% elsif @category %>
    <h2 class="category-names"><%= @category.title %>s</h2>
  <% else %>
    <h2 class="category-names">List of all Products</h2>
  <% end %>
  

  <% if @products %>
    <div class="table-indentation">
      <table class="table table-borderless">

        <tbody>
          <% @products.each do |product| %>
            <% if product.active %>
              <tr>
                <td><%= link_to image_tag(product.photo_url, height: "250", width: "300", :alt => "product photo"), product_path(product) %></td>
                <td><h2><%= link_to product.title, product_path(product), class: "item-names" %></h2></td>
                <td><h2 class="item-names"><%= number_to_currency(product.price)%></h2></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>

      </table>
    </div>
  <% else %>
    <h3>There are currently no products over here</h3>
  <% end %>

</body>
