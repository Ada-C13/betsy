<% if @product.errors.any? %>
  <ul class="errors">
    <% @product.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<section>
    <%= form_with url: product_cart_path(@product.id), method: "patch container" do |f| %>
      <div class ="form-group">
        <%= f.label :Quantity %>
        <%= f.select :quantity, [1,2,3,4,5], class:"form-control"  %>
      </div>
      <div class ="form-group">
        <%= f.submit "#{action_name}", class:"btn btn-success"%> 
      </div>  
   <% end %>
</section> 