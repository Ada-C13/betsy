<% if @product.errors.any? %>
  <ul class="errors">
    <% @product.errors.each do |column, message| %>
      <li>
        <span><%= column.capitalize %></span>: <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<h2>ADD PRODUCT</h2>
<%= form_with model: @product, class: 'product-form' do |f| %>
  <div class='form-group'>
    <%= f.label :name %>
    <%= f.text_field :name, :class => "form-control" %>
    
  </div>

  <div class='form-group'>
    <%= f.label :price %>
    <%= f.text_field :price, :class => "form-control" %>
  </div>

  <div class='form-group'>
    <%= f.label :Quantity_in_stock %>
    <%= f.text_field :stock, :class => "form-control" %>
  </div>

  <div class='form-group'>
    <%= f.label :description %>
    <%= f.text_field :description, :class => "form-control" %>
  </div>

  <div class='form-group'>
    <%= f.label :photo %>
    <%= f.text_field :photo, :class => "form-control" %>
  </div>

  <div>
    <%= f.label :category %>
    <%= f.select :categories_id, options_for_select(Category.all.map{ |cate| [cate.name, cate.id] }),{} ,class: "form-control" %>
  </div>

  <%= f.submit "#{action_name} Product", class: "btn btn-primary" %>
<% end %>
