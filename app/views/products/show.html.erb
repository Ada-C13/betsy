<% content_for(:headline) { "Product Details"} %>

<div class="show-product__details container">
  <div class="row">

    <div class="col-md-6">
    <%= image_tag(@product.photo, class: "img-fluid") %>
    </div>

    <div class="col-md-6">
    <h3><%= @product.name %> - <span class="show-product__price"><%= number_to_currency(@product.price) %></span></h3>
    <p><%= @product.description %></p>
    <%= button_to 'Add to cart', create_order_items_path(@product), class: 'btn btn-primary' %>
    <% unless product_owned_by_merchant?(@product) %>
    <%= link_to "add review", new_product_review_path(@product), class: 'btn btn-secondary' %>
    <% end %>
   
    </div>

  </div>

  <div>
  <% @product.reviews.each do |review| %>
  <p><%= rating_as_stars(review.rating) %> on <%= review.created_at.strftime('%-d %B %Y') %> <%= review.comment %>
  <% end %>

  </div>

</div>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>



