<main>
  <section>
    <h2>
      <%= @product.name %>
    </h2>
    <p> 
      <%= link_to "Edit", edit_product_path(@product.id) %> 
    </p>
    <div>
      <% if @product.photo_url == nil %>
        <%= image_tag("https://f1.pngfuel.com/png/584/952/34/black-and-white-flower-black-white-m-leaf-plant-stem-silhouette-computer-line-plants-png-clip-art.png", :alt => "generic plant silhouette", class: "product-image") %>
      <% else %>
        <%= image_tag(@product.photo_url, :alt => @product.name, class:"product-image") %>
      <% end %>   
    </div>

    <div>   
      <p> $<%= sprintf('%.2f', @product.price) %> </p>
      <p> Stock: <%= @product.inventory %> </p>
      <p> <%= @product.description %> </p>
    </div>
  </section>
</main>