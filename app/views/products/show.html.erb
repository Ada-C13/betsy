<div>
  <h3><%= @product.name %></h3>
  <%= image_tag @product.img_url, alt: @product.description %>
  <h5><%= @product.description %></h4>
  <h6><%= @product.price %></h6>
</div>


 <div class="form">
     <%= form_with scope: :post, url: add_to_cart_path do |f| %>
         <%= f.label "Quantity:" %>
         <%= f.text_field :qty %>

         <%= f.submit "Add to Cart" %>
      <% end %>
</div>  

