<main>
  <section>
    <div>
      <%= image_tag "#{@product.img_url}" %>
    </div>
    <div>
      <h3><b><%= @product.name %></b></h3>
      <h4><b>Seller: <%= link_to @product.merchant.username, merchant_path(@product.merchant.id) %></b></h4>
      <p><%= @product.description %></p>
      <p><b><%= number_to_currency(@product.price) %></b></p>
    
      <% if @product.inventory > 0 %>
        <p>In Stock</p>
      <% else %>
        <p>Out of Stock</p>
      <% end %>
    </div>
  </section>

  <%= render partial: "quantform", locals: { action_name: "Add to cart" } %>
  
  <%= render partial: "reviews/reviews", locals: { reviews: @reviews }  %>

  <%= button_to "Leave Review", new_product_review_path(@product.id), class: "btn btn-info", method: :get %>
</main>


  




  