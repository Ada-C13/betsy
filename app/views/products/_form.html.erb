
<%= form_with model: @product do |f| %>

  <div class="form-group">
    <%= f.label "Title:" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Price:" %>
    <%= f.text_field :price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Photo URL:" %>
    <%= f.text_field :photo_url, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Description:" %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Stock:" %>
    <%= f.text_field :stock, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Active:" %>
    <%= f.select :category, options_for_select(["true", "false"]),{include_blank: false}, {class: "form-control"} %>
  </div>

  <div class="form-group">
    <%= f.label "Category: " %>
    <%= collection_check_boxes(:product, :category_ids, Category.all, :id, :title) %>
    <%= link_to "Add a new category", new_category_path, class: "btn btn-secondary" %>
  </div>
  
  <%= f.submit "#{action_name} Product", class: "btn btn-primary"%>

<% end %>
