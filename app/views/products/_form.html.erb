
<%= form_with model: @product do |f| %>

  <%= f.label "Title:" %>
  <%= f.text_field :title %>

  <%= f.label "Price:" %>
  <%= f.text_field :price %>

  <%= f.label "Photo URL:" %>
  <%= f.text_field :photo_URL %>

  <%= f.label "Description:" %>
  <%= f.text_area :description %>

  <%= f.label "Stock:" %>
  <%= f.text_field :stock %>

  <%= f.submit "#{action_name} Product"%>

<% end %>