<section>
	<%= form_with model: @product do |f| %>
		<div class="form-group" >
			<%= f.label :category %>
			<%= f.collection_check_boxes(:category_ids, Category.all, :id, :name, {}, {:multiple => true}) %>
		</div>
		
		<div class="form-group">
			<%# f.label :new_category %>
			<%# f.text_field :new_category, class: "form-control" %>
			<%= link_to "Add category", new_category_path(@category), class: "btn btn-primary" %>
		</div>

		<div class="form-group">
			<%= f.label :name %>
			<%= f.text_field :name, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :price %>
			<%= f.text_field :price, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :description %>
			<%= f.text_field :description, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :photo_url %>
			<%= f.text_area :photo_url, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :stock %>
			<%= f.text_area :stock, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= f.submit class: "btn btn-primary" %>
		</div>
	<% end %>
</section>
