<%= form_with model: @product do |f| %>

  <div class="form-group">
    <%= f.label "Categories: " %>
    <div class="custom-form-group">
      <%= collection_check_boxes(:product, :category_ids, Category.all, :id, :title) do |b| %>
        <%= b.label(class: "form-control form-label") { b.check_box(class: "checkbox") + b.text } %>
      <% end %>
      <%= link_to "Add a new category", new_category_path, class: "btn cart_button" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "Title:" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Price:" %>
    <%= f.text_field :price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Photo URL:" %>
    <%= f.text_field :photo_url, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Description:" %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Stock:" %>
    <%= f.text_field :stock, class: "form-control" %>
  </div>

  <%= f.submit "#{action_name} Product", class: "form_submit_button button trans_200"%>
<% end %>
