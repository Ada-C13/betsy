<% if @product.errors.any? %>
  <ul class="errors">
      <% @product.errors.each do |column, message| %>
      <li>
          <strong><%= column.capitalize %></strong> <%= message %>
      </li>
      <% end %>
  </ul>
<% end %>

<%= form_with model: @product do |f| %>
  <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
      <%= f.label :price %>
      <%= f.text_field :price, class: "form-control" %>
  </div>

  <div class="form-group">
      <%= f.label :inventory %>
      <%= f.number_field :inventory, in: 1..20, step: 1, class: "form-control" %>
  </div>

  <div class="form-group">
      <%= f.label :category %>
      <%= f.select :category, ["painting", "sculpture", "mixed media", "portrait"], class: "form-control" %>
  </div>

  <div class="form-group">
      <%= f.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>