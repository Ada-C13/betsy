<% if @product.errors.any? %>
  <ul class="errors alert alert-danger" role="alert">
    <% @product.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @product, class: 'create-product' do |f| %>

  <div class = "form-group">  
    <%= f.label :name, class: "hidden"%>
    <%= f.text_field :name, placeholder: "Name", class: 'form-control'%>
  </div>

  <div class = "form-group">  
    <%= f.label :price, class: "hidden"%>
    <%= f.text_field :price, placeholder: "Price", class: 'form-control'%>
  </div>

    <div class = "form-group">  
    <%= f.label :stock, class: "hidden"%>
    <%= f.text_field :stock, placeholder: "Stock", class: 'form-control'%>
  </div>

  <div class = "form-group">  
    <%= f.label :photo_url, class: "hidden"%>
    <%= f.text_field :photo_url, placeholder: "Photo URL", class: 'form-control'%>
  </div>

  <div class = "form-group">
    <%= f.label :descirption, "Description", class: "hidden" %>
    <%= f.text_area :description, placeholder: "Description", class: 'form-control' %>
  </div>

  <%= f.submit "Add new product", class: 'product__new-button'%>
<% end %>