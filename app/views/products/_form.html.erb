<% if @product.errors.any? %>
  <ul class="errors">
      <% @product.errors.each do |column, message| %>
      <li>
          <strong><%= column.capitalize %></strong> <%= message %>
      </li>
      <% end %>
  </ul>
<% end %>

<%= form_with model: @product do |f| %>
  <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
      <%= f.label :price %>
      <%= f.text_field :price, class: "form-control" %>
  </div>

  <div class="form-group">
      <%= f.label :inventory %>
      <%= f.number_field :inventory, in: 0..20, step: 1, class: "form-control" %>
  </div>

  <div class="form-group">
      <%= f.label :image %>
      <%= f.text_field :image, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :categories %>
    <%= collection_check_boxes(:product, :category_ids, Category.all, :id, :name) %>
  </div>

  <div class="form-group" >
      <%= link_to "Add New Category", new_category_path, class: "btn btn-primary"%>
  </div>

  <div class="form-group">
      <%= f.submit "#{action_name} Art", class: "btn btn-primary" %>
  </div>
<% end %>