<% if @review.errors.any? %>
  <ul class="errors">
    <% @review.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @review, class: 'create-review' do |f| %>
  <p>Please fill in the following information to create your review about <%= "#{@product}"%>:</p>

  <%= f.label :rating %>
  <%= f.text_field :rating %>
  

  <%= f.label :comment %>
  <%= f.text_field :comment %>

  

  <%= f.submit "Review", class: "book-button" %>
<% end %>