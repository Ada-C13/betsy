<body data-gr-c-s-loaded="true" style="">
  <div class="parallax-mirror" style="visibility: visible; z-index: -100; position: fixed; top: 0px; left: 0px; overflow: hidden; transform: translate3d(0px, -139px, 0px); height: 465px; width: 1280px;"><img class="parallax-slider" src="images/blog_background.jpg" style="transform: translate3d(-200px, 111.2px, 0px); position: absolute; height: 415px; width: 1681px; max-width: none;"></div>
    <div class="super_container">
      <div class="home">
        <div class="home_background parallax-window" data-parallax="scroll">
          <div><img src="https://i.imgur.com/b6IS9xc.jpg" alt="background" /></div>
        </div>
          
        <div class="home_content">
          <div class="home_title">Create Review</div>
        </div>
      </div>
    </div>
  </div>
  <div class="blog">
    <div class="container">
        <div class="sidebar_search">
          <%= form_with model: @review do |f| %>

            <div class="form-group">
              <%= f.label "Write your review for #{session[:product]["title"]}:", class: "sidebar_title" %>
              <%= f.text_field :text, class: "sidebar_search_input" %>
            </div>

            <div class="form-group">
              <%= f.label "Choose rating: ", class: "sidebar_title" %>
              <%= f.select :rating, (1..5), class: "dropdown_item_select search_input" %>
            </div>
            
            <%= f.submit "Submit", class: "button search_button"%>
          <% end %>
        </div>
    </div>
  </div>
</body>

