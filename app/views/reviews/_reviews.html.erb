<div class="mt-5" style="color:white">
  <h5 class="ml-5 mb-4"><%=pluralize reviews.count ,"product review"%></h5>
  <section class='mt-3 row-2'>
    <% reviews.each do |review|%>
      <div class="col mb-4">
        <div class='review card-body'>
          <div class="row">
            <div class="mr-3" style="float:left;">
              <%= image_tag 'https://images-na.ssl-images-amazon.com/images/S/amazon-avatars-global/default._CR0,0,1024,1024_SX460_.png',
              class: 'reviewer_avatar' %>
            </div>
          <div>
          <%= review.reviewer %>
          <br>
          <p class="text-warning mb-0">
                <% review.rating.times do  %>
                      ★
                <%end%>
                <% (5-review.rating).times do%>
                      ☆
                <%end%>
          </p>
          <%# simple_format to help us put it in paragraph %>
          <p class="mb-0"> <%= review.comment%> </p>
          </div>
          </div>
        </div>
      </div>
    <%end%>
  </section>
</div>